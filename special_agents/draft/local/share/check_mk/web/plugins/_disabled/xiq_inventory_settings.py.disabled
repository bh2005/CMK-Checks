#!/usr/bin/env python3
# -*- coding: utf-8 -*-
# Global (Setup) settings for XIQ Inventory column visibility (CMK 2.4)
# Pfad ~/local/share/check_mk/web/plugins/wato/

from cmk.gui.i18n import _
from cmk.gui.plugins.wato import register_configvar, ConfigVariableGroup
from cmk.gui.valuespec import Dictionary, Checkbox

_group = ConfigVariableGroup("xiq_inventory", _("XIQ Inventory"))

register_configvar(
    group=_group,
    varname="xiq_inventory_display_lldp",
    title=_("XIQ LLDP/CDP – Spalten (global)"),
    valuespec=Dictionary(
        elements=[
            ("hostaddress",      Checkbox(title=_("Hostaddress"),       default_value=True)),
            ("hostname",         Checkbox(title=_("Hostname"),          default_value=True)),
            ("id",               Checkbox(title=_("ID"),                default_value=True)),
            ("local_port",       Checkbox(title=_("Local Port"),        default_value=True)),
            ("mac_address",      Checkbox(title=_("MAC Address"),       default_value=True)),
            ("management_ip",    Checkbox(title=_("Management IP"),     default_value=True)),
            ("port_description", Checkbox(title=_("Port Description"),  default_value=True)),
            ("remote_device",    Checkbox(title=_("Remote Device"),     default_value=True)),
            ("remote_port",      Checkbox(title=_("Remote Port"),       default_value=True)),
            ("neighbor_key",     Checkbox(title=_("Neighbor Key"),      default_value=False)),
        ],
        optional_keys=[],
    ),
)

register_configvar(
    group=_group,
    varname="xiq_inventory_display_devices",
    title=_("XIQ Devices – Spalten (global)"),
    valuespec=Dictionary(
        elements=[
            ("hostname",          Checkbox(title=_("Hostname"),          default_value=True)),
            ("device_type",       Checkbox(title=_("Device Type"),       default_value=True)),
            ("model",             Checkbox(title=_("Model"),             default_value=True)),
            ("ip_address",        Checkbox(title=_("IP Address"),        default_value=True)),
            ("mac_address",       Checkbox(title=_("MAC Address"),       default_value=True)),
            ("serial",            Checkbox(title=_("Serial Number"),     default_value=True)),
            ("software_version",  Checkbox(title=_("Software Version"),  default_value=True)),
            ("location",          Checkbox(title=_("Location"),          default_value=True)),
            ("status",            Checkbox(title=_("Status"),            default_value=True)),
            ("source",            Checkbox(title=_("Source"),            default_value=False)),
            ("device_id",         Checkbox(title=_("Device ID"),         default_value=True)),
        ],
        optional_keys=[],
    ),
)
